        }
        
        .modal-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px;
            border-top: 1px solid #e0e0e0;
            background: white;
            position: sticky;
            bottom: 0;
        }
        
        .total-price {
            font-size: 20px;
            font-weight: bold;
        }
        
        .done-btn {
            background: #1976d2;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
        }
        
        .done-btn:hover {
            background: #1565c0;
        }
        
        @media (max-width: 480px) {
            .modal {
                max-width: 100%;
            }
            
            .size-options {
                flex-direction: column;
            }
        }
    </style>

    <script>
        let addedServices = [];
        let totalPrice = 0;
        
        // Add click handlers for interactive elements
        document.querySelectorAll('.add-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const serviceItem = this.closest('.service-item');
                const serviceName = serviceItem.querySelector('.service-name').textContent;
                
                if (this.textContent === 'Add') {
                    // Show service details modal for the first "Furnished apartment" service
                    if (serviceName === 'Furnished apartment') {
                        showServiceModal();
                        return;
                    }
                    
                    this.textContent = 'Added';
                    this.style.backgroundColor = '#4caf50';
                    this.style.color = 'white';
                    addedServices.push(serviceName);
                } else {
                    this.textContent = 'Add';
                    this.style.backgroundColor = '#e3f2fd';
                    this.style.color = '#1976d2';
                    addedServices = addedServices.filter(s => s !== serviceName);
                }
                
                updateNextButton();
            });
        });
        
        function updateNextButton() {
            const nextBtn = document.querySelector('.next-btn');
            if (addedServices.length > 0) {
                nextBtn.textContent = `Next (${addedServices.length} services selected)`;
                nextBtn.style.backgroundColor = '#1976d2';
            } else {
                nextBtn.textContent = 'Next';
                nextBtn.style.backgroundColor = '#333';
            }
        }
        
        function showServiceModal() {
            document.getElementById('serviceModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        }
        
        function closeModal() {
            document.getElementById('serviceModal').classList.remove('show');
            document.body.style.overflow = 'auto';
        }
        
        // Size option selection
        document.querySelectorAll('.size-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.size-option').forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                
                const price = this.querySelector('.size-price').textContent;
                document.querySelector('.total-price').textContent = price;
            });
        });
        
        // Done button functionality
        document.querySelector('.done-btn').addEventListener('click', function() {
            // Mark the service as added
            const furnishedAptBtn = Array.from(document.querySelectorAll('.service-name'))
                .find(el => el.textContent === 'Furnished apartment')
                .closest('.service-item')
                .querySelector('.add-btn');
                
            furnishedAptBtn.textContent = 'Added';
            furnishedAptBtn.style.backgroundColor = '#4caf50';
            furnishedAptBtn.style.color = 'white';
            
            addedServices.push('Furnished apartment');
            updateNextButton();
            closeModal();
        });
        
        document.querySelector('.next-btn').addEventListener('click', function() {
            if (addedServices.length > 0) {
                alert(`Proceeding with ${addedServices.length} selected services: ${addedServices.join(', ')}`);
            } else {
                alert('Please select at least one service to continue.');
            }
        });
        
        document.querySelector('.back-btn').addEventListener('click', function() {
            alert('Going back...');
        });
        
        // Close modal when clicking outside
        document.getElementById('serviceModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });
        
        // Add scroll effect to app bar
        let lastScrollY = window.scrollY;
        window.addEventListener('scroll', () => {
            const appBar = document.querySelector('.app-bar');
            if (window.scrollY > lastScrollY && window.scrollY > 100) {
                appBar.style.transform = 'translateY(-100%)';
            } else {
                appBar.style.transform = 'translateY(0)';
            }
            lastScrollY = window.scrollY;
        });
    </script>
</body>
</html>
